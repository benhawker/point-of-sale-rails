<% if @customers.any? %>
	<% @customers.each do |customer| %>
		<%= render 'customer', customer: customer %>
		<div id="customer-form" style="display:none;"></div>
	<% end %>
<% else %>
		<p>No customers yet</p>
<% end %>

<%= link_to 'New Customer', new_customer_path, remote: true %>

<div id="customer-form" style="display:none;"></div>