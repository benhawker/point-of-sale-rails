<%= div_for @customer do %>
	<%= render 'customer', customer: @customer %>

	<% @customer.orders.each do |order| %>
		<%= div_for order do %>
			<li class="customer-order">
				<%= "Order #{order.id}" %> / 
				<%= "#{order.order_items.size} Items" %> / 
				<%= number_to_currency(order.total) %> /
				<%= link_to 'Show Order Summary', order_path(order), remote: true %>
			</li>
			<div id="order-summary" style="display:none;"></div>
		<% end %>
	<% end %>
<% end %>