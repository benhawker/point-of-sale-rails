<li>Order ID <%= @order.id %></li>
<li>Customer Name <%= @order.customer.name %></li>
<li>Order Total <%= @order.total %></li>
<br>
<li>Number of Items in the order: <%= @order.order_items.count %></li>

<ul>
<% @order.order_items.each do |order_item| %>
	<li>
		Product: <%= order_item.product.name %> / Quantity: <span class="<%= order_item.id %>_quantity"><%= order_item.quantity %></span>

		<%= link_to "Remove Item from Order", order_order_item_path(@order, order_item), method: :delete %>
		<%= link_to "Edit", edit_order_order_item_path(@order, order_item), class: "edit-order-item" %>
		
		<%= form_for [@order, order_item], remote: true, method: :put do |f| %>
    	<%= f.text_field :quantity, value: order_item.quantity %>
    	<%= f.submit "Update!" %>
    <% end %>

	</li>
<% end %>
</ul>

<%= link_to "Edit Order", edit_order_path %>
<%= link_to "Add Another Item To Order", new_order_order_item_path(@order) %>


