<li>Order ID: <%= @order.id %></li>
<li>Order Status: <%= @order.status.titleize %></li>
<li>Customer Name: <%= @order.customer.name %></li>
<li>Customer Email: <%= @order.customer.email %></li>

<li>Order Total: 
	<span class="<%= @order.id %>_total"><%= @order.total %></span>
</li>

<li>Number of unique items in order: 
	<span class="<%= @order.id %>unique_order_items_count"><%= @order.order_items.count %></span>
</li>

<li>Total number of items in order: 
	<span class="<%= @order.id %>total_order_items_count"><%= @order.total_items %></span>
</li>

<ul id="order-item-list">
	<%= render 'order_items/order_items_list' %>
</ul>
<div id="order-item-form" style="display:none;"></div>

<%= link_to "Edit Order", edit_order_path(@order) %>
<%= link_to "Delete #{@order.id}", order_path(@order), method: :delete, class: "something" %>

<%= link_to "Create Invoice", new_invoice_path, remote: true %>
<%= link_to 'add new item with ajax', new_order_order_item_path(@order), remote: true %>
