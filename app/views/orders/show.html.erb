<%= render 'order_summary' %>

<ul id="order-item-list">
	<% @order.order_items.each do |order_item| %>
		<%= render 'order_items/order_item', order_item: order_item %>
	<% end %>
	
	<div id="order-item-form" style="display:none;"></div>
</ul>


<button><%= link_to 'Add New Item', new_order_order_item_path(@order), remote: true %></button>
<button><%= link_to "Delete Order ##{@order.id}", order_path(@order), method: :delete, class: "something" %></button>
<button><%= link_to "Create PDF Invoice", new_invoice_path, remote: true %></button>
