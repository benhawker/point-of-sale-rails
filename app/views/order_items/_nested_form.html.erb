<%= form_for [@order, order_item], remote: true, method: :put do |f| %>
  <%= f.select :product_id, Product.all.map{|p| ["#{p.name}", p.id] }, id: "product-select" %>
  <%= f.select :quantity, options_for_select(1..10, order_item.quantity), { prompt: "Quantity" }, id: "quantity-select" %>
  <%= f.submit "Update!" %>
<% end %>