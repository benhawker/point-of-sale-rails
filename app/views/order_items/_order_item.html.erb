<li class="individual-order-item">
	<span class="<%= order_item.id %>_product_name"><%= order_item.product.name %></span>
	/ Quantity: <span class="<%= order_item.id %>_quantity"><%= order_item.quantity %></span>
	/ Unit Price: <span class="<%= order_item.id %>_unit_price"><%= order_item.product.price %></span>
	/ Line Total: <span class="<%= order_item.id %>_line_total"><%= order_item.calculate_total %></span>

	<button><%= link_to "Remove Item", order_order_item_path(@order, order_item), method: :delete, remote: true, class: 'order-item-remove' %></button>
	
	<%= render 'order_items/nested_form', order_item: order_item %>
</li>